{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Various Social Statistics across Countries (2023)"},
  "width": 700,
  "height": 420,

  "data": {
    "url": "https://raw.githubusercontent.com/RandalWallace/FIT3179_Assignment2/refs/heads/main/data/world-data-2023.csv"
  },

  "params": [
    {
      "name": "region_filter",
      "bind": {
        "input": "select",
        "options": ["All","Asia","Europe","Africa","North America","South America","Oceania"],
        "name": "Select Region: "
      },
      "value": "All"
    },
    { "name": "annotated_countries", "value": ["Australia", "Singapore", "Sweden"] },
    { "name": "last_metric", "value": "Unemployment" }
  ],

  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/RandalWallace/FIT3179_Assignment2/refs/heads/main/data/Countries%20by%20continents.csv",
          "format": {"type": "csv"}
        },
        "key": "Country",
        "fields": ["Continent"]
      }
    },
    {"filter": "region_filter == 'All' || datum.Continent == region_filter"},
    {
      "fold": [
        "Fertility Rate",
        "Forested Area (%)",
        "Gross primary education enrollment (%)",
        "Gross tertiary education enrollment (%)",
        "Infant mortality",
        "Life expectancy",
        "Out of pocket health expenditure",
        "Population: Labor force participation (%)",
        "Total tax rate",
        "Unemployment rate"
      ],
      "as": ["metric", "value"]
    },
    {
      "lookup": "metric",
      "from": {
        "data": {
          "values": [
            {"original": "Fertility Rate", "renamed": "Birth Rate"},
            {"original": "Forested Area (%)", "renamed": "Forest Coverage"},
            {"original": "Gross primary education enrollment (%)", "renamed": "Primary Education"},
            {"original": "Gross tertiary education enrollment (%)", "renamed": "Higher Education"},
            {"original": "Infant mortality", "renamed": "Child Mortality"},
            {"original": "Life expectancy", "renamed": "Life Expectancy"},
            {"original": "Out of pocket health expenditure", "renamed": "Health Spending"},
            {"original": "Population: Labor force participation (%)", "renamed": "Labor Force"},
            {"original": "Total tax rate", "renamed": "Tax Rate"},
            {"original": "Unemployment rate", "renamed": "Unemployment"}
          ]
        },
        "key": "original",
        "fields": ["renamed"]
      }
    },
    {
      "calculate": "toNumber(replace(datum.value, /[%,$]/g, ''))",
      "as": "value_num"
    },
    {"filter": "datum.value_num != null && !isNaN(datum.value_num)"},
    {
      "joinaggregate": [
        {"op": "min", "field": "value_num", "as": "min_val"},
        {"op": "max", "field": "value_num", "as": "max_val"}
      ],
      "groupby": ["renamed"]
    },
    {
      "calculate": "datum.max_val === datum.min_val ? 0.5 : (datum.value_num - datum.min_val) / (datum.max_val - datum.min_val)",
      "as": "value_normalised"
    },
    {
      "calculate": "indexof(annotated_countries, datum['Country']) >= 0 ? 'yes' : 'no'",
      "as": "is_annotated"
    }
  ],

  "layer": [
    {
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "fields": ["Country"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "mark": {"type": "line", "point": true, "interpolate": "linear", "strokeWidth": 1.5},
      "encoding": {
        "x": {
          "field": "renamed",
          "type": "ordinal",
          "axis": {"labelAngle": -45, "title": null, "labelLimit": 120},
          "scale": {"padding": 0.1}
        },
        "y": {
          "field": "value_normalised",
          "type": "quantitative",
          "axis": {"title": "Normalised Value (0-1)"},
          "scale": {"domain": [0, 1], "nice": false}
        },
        "detail": {"field": "Country"},
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": ["Asia", "Europe", "Africa", "North America", "South America", "Oceania"],
            "range": ["#e6b3cc", "#b3d1e6", "#e6d9b3", "#b3e6cc", "#d9b3e6", "#e6ccb3"]
          },
          "legend": null
        },
        "opacity": {
          "condition": {"param": "highlight", "empty": false, "value": 0.6},
          "value": 0.3
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "renamed", "title": "Metric"},
          {"field": "value", "title": "Original Value"},
          {"field": "value_normalised", "title": "Normalised", "format": ".3f"},
          {"field": "Continent", "title": "Continent"}
        ]
      }
    },

    {
      "transform": [{"filter": "datum.is_annotated === 'yes'"}],
      "mark": {"type": "line", "point": false, "interpolate": "linear", "strokeWidth": 3},
      "encoding": {
        "x": {"field": "renamed", "type": "ordinal", "scale": {"padding": 0.1}},
        "y": {"field": "value_normalised", "type": "quantitative"},
        "detail": {"field": "Country"},
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": ["Australia", "Singapore", "Sweden"],
            "range": ["#0d47a1", "#1b5e20", "#b71c1c"]
          },
          "legend": null
        },
        "opacity": {"value": 1},
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "renamed", "title": "Metric"},
          {"field": "value", "title": "Original Value"},
          {"field": "value_normalised", "title": "Normalised", "format": ".3f"}
        ]
      }
    },

    {
      "transform": [{"filter": "datum.is_annotated === 'yes'"}],
      "mark": {"type": "point", "size": 40, "filled": true},
      "encoding": {
        "x": {"field": "renamed", "type": "ordinal"},
        "y": {"field": "value_normalised", "type": "quantitative"},
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": ["Australia", "Singapore", "Sweden"],
            "range": ["#2A7AB5", "#1FAB1F", "#BA0F10"]
          },
          "legend": null
        },
        "opacity": {"value": 1}
      }
    },

    {
      "transform": [
        {"filter": "datum.is_annotated === 'yes'"},
        {"filter": "datum.renamed === last_metric"}
      ],
      "mark": {"type": "text", "fontWeight": "bold", "dx": 8, "align": "left", "baseline": "middle"},
      "encoding": {
        "x": {"field": "renamed", "type": "ordinal"},
        "y": {"field": "value_normalised", "type": "quantitative"},
        "text": {"field": "Country"},
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": ["Australia", "Singapore", "Sweden"],
            "range": ["#2A7AB5", "#1FAB1F", "#BA0F10"]
          },
          "legend": null
        }
      }
    }
  ],

  "config": {
    "title": {"font": "Montserrat", "fontSize": 18, "fontWeight": "bold"},
    "axis": {
      "labelFont": "Montserrat",
      "labelFontSize": 12,
      "titleFont": "Montserrat",
      "titleFontSize": 13,
      "titleFontWeight": "bold"
    },
    "legend": {
      "labelFont": "Montserrat",
      "labelFontSize": 12,
      "titleFont": "Montserrat",
      "titleFontSize": 13,
      "titleFontWeight": "bold"
    }
  }
}
