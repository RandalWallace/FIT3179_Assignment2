{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "PPP-Adjusted GDP per Capita (2023)"},
  "width": {"step": 25},
  "height": 420,
  "data": {
    "url": "https://raw.githubusercontent.com/RandalWallace/FIT3179_Assignment2/refs/heads/main/data/gdp_per_capita_PPP.csv"
  },
  "transform": [
    {"filter": "datum['2023'] != null && datum['2023'] != ''"},
    {"calculate": "parseFloat(datum['2023'])", "as": "gdp_value"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "gdp_value", "order": "descending"}]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Country Name", 
      "type": "nominal",
      "title": "Country",
      "axis": {"labelAngle": -45},
      "sort": {"field": "gdp_value", "order": "descending"}
    },
    "y": {
      "field": "gdp_value", 
      "type": "quantitative",
      "title": "GDP per Capita (PPP, USD)",
      "scale": {"zero": true}
    },
    "color": {
      "field": "rank",
      "type": "quantitative",
      "scale": {
        "scheme": "rainbow"
      },
      "legend": null
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {"field": "gdp_value", "type": "quantitative", "title": "GDP per Capita (PPP)", "format": ",.0f"}
    ]
  }
}